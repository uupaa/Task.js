{
  "name":           "uupaa.task.js",
  "version":        "0.8.20",
  "description":    "Counter based task executor.",
  "url":            "https://github.com/uupaa/Task.js",
  "keywords":       ["async", "task", "flow", "util", "uupaa"],
  "author":         "uupaa <uupaa.js@gmail.com>",
  "repository": {
    "type":         "git",
    "url":          "https://github.com/uupaa/Task.js.git"
  },
  "scripts": {
    "watch":        "node node_modules/uupaa.watch.js --verbose --action build ./lib/Task.js",
    "build":        "node node_modules/uupaa.minify.js --keep --output ./lib/Task.min.js ./lib/Task.js",
    "build-release":"node node_modules/uupaa.minify.js --module all --output ./lib/Task.min.js",
    "test":         "NODE_ENV=production NODE_PATH=lib node --harmony test/index.node.js; open test/index.html",
    "lint":         "plato --title Task.js --jshint .jshintrc -d lint/plato ./lib/Task.js; open lint/plato/index.html",

    "watch-type":   "node node_modules/uupaa.watch.js --verbose --action build-type ./lib/Type/Task.ts",
    "build-type":   "tsc -m commonjs -d ./lib/Type/Task.ts; tsc -m commonjs ./lib/Type/Task.ts",
    "test-type":    "NODE_ENV=production NODE_PATH=lib node --harmony test/index.node.js; open test/index.type.html",
    "lint-type":    "plato --title Task.ts --jshint .jshintrc -d lint/plato ./lib/Type/Task.js; open lint/plato/index.html"
  },
  "build": {
    "all": { "lib/Task.js": "" },
    "node": { },
    "worker": { },
    "browser": { }
  },
  "dependencies": {
  },
  "devDependencies": {
    "uupaa.valid.js":   "",
    "uupaa.help.js":    "",
    "uupaa.test.js":    "",
    "uupaa.watch.js":   "",
    "uupaa.minify.js":  ""
  },
  "lib":            "./lib/",
  "main":           "./index.js",
  "license":        "MIT",
  "contributors":   []
}
